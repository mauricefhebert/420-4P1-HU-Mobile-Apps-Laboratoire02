<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laboratoire02.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" HorizontalOptions="Start" Text="Nom complet:"></Label>
            <Entry HorizontalOptions="FillAndExpand" Keyboard="Default"></Entry> 
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" Margin="0 18 0 0" HorizontalOptions="Start"  Text="Telephone:"></Label>
            <Entry HorizontalOptions="FillAndExpand" Keyboard="Telephone"></Entry>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" HorizontalOptions="Start" Text="Mot de passe:"></Label>
            <Entry HorizontalOptions="FillAndExpand" Keyboard="Default" IsPassword="true"></Entry>
        </StackLayout>
    </StackLayout>

</ContentPage>
